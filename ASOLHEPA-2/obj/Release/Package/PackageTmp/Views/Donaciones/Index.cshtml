@model IEnumerable<ASOLHEPA_2.Donacione>

@{
    ViewBag.Title = "Donaciones";
}

<h2>LISTA DE DONACIONES</h2>

<p>
    @Html.ActionLink("Crear Nueva", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Obsevaciones)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Asociado.Nombres)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Obsevaciones)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Asociado.Nombres)
        </td>
        <td>
            @Html.ActionLink("Edita", "Edit", new { id=item.Id }) |
