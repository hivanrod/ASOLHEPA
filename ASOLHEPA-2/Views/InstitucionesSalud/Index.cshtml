@model IEnumerable<ASOLHEPA_2.InstitucionesSalud>

@{
    ViewBag.Title = "Listado de Instituciones de Salud";
}

<table class="tb2">
    <tr>
        <td>
            <h2>Listado de Instituciones de Salud</h2>
        </td>
        <td class="SideL">
            @Html.ActionLink("Crear Nueva Institucion de salud +", "Create", "", new { @class = "LNK1" })
        </td>
    </tr>
    <tr>
        <td colspan="2">
            @TempData["Message"]
        </td>
    </tr>
</table>



<p>
    @Html.ActionLink("Lista de Servicios Especializados de Instituciones de Salud", "Index", "ServiciosEspecializadosInstituciones")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdentificacionNIT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dirección)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teléfono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teléfono2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observaciones)
        </th>
        <th>
            Servicios Especializados 1
        </th>
        <th>
            Servicios Especializados 2
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentificacionNIT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dirección)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teléfono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teléfono2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiciosEspecializadosInstitucione.Servicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiciosEspecializadosInstitucione1.Servicio)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
